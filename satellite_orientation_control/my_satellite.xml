<mujoco model="satellite">
    <option integrator="implicit" timestep="0.001" gravity="0 0 0"/>
    
    <!-- <statistic meansize="0.1"/> -->

    <!-- <default>
        <geom contype="0" conaffinity="0"/>
    </default> -->

    <worldbody>
        <light directional="true" diffuse=".8 .8 .8" specular=".2 .2 .2" pos="5 0 0" dir="-1 0 0"/>
        <light directional="true" diffuse=".8 .8 .8" specular=".2 .2 .2" pos="0 0 5" dir="0 0 -1"/>
        
        <geom name="floor" pos="0 0 -1" size="0 0 1" type="plane"/>

        <body name="main_body" pos="0 0 0">
            <freejoint/>
            <geom name="main_box" type="box" pos="0 0 0" size="0.2 0.25 0.15" rgba="1 1 0 0.8"/>
            
            <body name="flywheel1" pos="0.21 0 0">
                <joint name="j1" type="hinge" axis="1 0 0"/>
                <geom name="fw1" type="cylinder" fromto="0 0 0 0.05 0 0" size="0.15" rgba="1 0 0 1"/>
            </body>

            <body name="flywheel2" pos="0 0.26 0">
                <joint name="j2" type="hinge" axis="0 1 0"/>
                <geom name="fw2" type="cylinder" fromto="0 0 0 0 0.05 0" size="0.15" rgba="0 1 0 1"/>
             </body>
            
            <body name="flywheel3" pos="0 0 0.16">
                <joint name="j3" type="hinge" axis="0 0 1"/>
                <geom name="fw3" type="cylinder" fromto="0 0 0 0 0 0.05" size="0.15" rgba="0 0 1 1"/>
            </body>

        </body>
    </worldbody>

    <actuator>
        <motor name="m1" joint="j1"/>
        <motor name="m2" joint="j2"/>
        <motor name="m3" joint="j3"/>
    </actuator>

</mujoco>